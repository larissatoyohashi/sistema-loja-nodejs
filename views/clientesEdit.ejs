<div class="container">
    <div class="card">
        <div class="card-header">
            <h1> Editar Cliente </h1>
        </div>
        <div class="card-body">
            <form action="/clientes/edit/<%= clientes.id %>" method="POST">
                <label> Nome do cliente:</label>
                <input type="text" name="nome" placeholder="Insira o nome do cliente" class="form-control" value="<%= clientes.nome %>">

                <label> CPF do cliente:</label>
                <input type="text" name="cpf" placeholder="Insira o cpf do cliente" class="form-control" value="<%= clientes.cpf %>">

                <label> Endereço do cliente:</label>
                <input type="text" name="endereco" placeholder="Insira o endereço do cliente" class="form-control" value="<%= clientes.endereco %>">
                
                <br>

                <button type="submit" class="btn btn-success"> Editar </button>

            </form>
            <hr>
        </div>
    </div>
</div>



